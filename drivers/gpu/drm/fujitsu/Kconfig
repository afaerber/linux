config DRM_FUJITSU
	bool

config DRM_FUJITSU_FDB
	tristate "Fujitsu FDB DRM"
	depends on DRM
	depends on ARCH_MB8AC0300 || ARCH_MULTIPLATFORM
	select DRM_FUJITSU
	select DRM_KMS_HELPER
	select FB_SYS_FILLRECT
	select FB_SYS_COPYAREA
	select FB_SYS_IMAGEBLIT
	select FB_SYS_FOPS
	default n
	help
	  DRM display driver for Fujitsu MB8AC0300
