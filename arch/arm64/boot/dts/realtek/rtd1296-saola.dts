/dts-v1/;

#include <dt-bindings/gpio/gpio.h>

#include "rtd1296.dtsi"

/ {
	compatible = "realtek,saola", "realtek,rtd1296";
	model = "Realtek Saola EVB";

	memory@1f000 {
		device_type = "memory";
		reg = <0x1f000 0x7ffe1000>; /* boot ROM to 2 GiB */
	};

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

/* serial console (J1) */
&uart0 {
	status = "okay";
};
