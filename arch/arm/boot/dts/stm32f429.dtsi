/*
 * Device tree for STM32F429 SoC
 */

#include "armv7-m.dtsi"
#include <dt-bindings/clock/stm32f42xxx.h>

/ {
	aliases {
		serial1 = &usart1;
		serial2 = &usart2;
		serial3 = &usart3;
		serial4 = &uart4;
		serial5 = &uart5;
		serial6 = &usart6;
		serial7 = &uart7;
		serial8 = &uart8;
	};

	soc {
		tim2: timer@40000000 {
			compatible = "st,stm32f4-timer";
			reg = <0x40000000 0x400>;
			interrupts = <28>;
			clocks = <&rcc CLK_TIM2>;
		};

		tim5: timer@40000c00 {
			compatible = "st,stm32f4-timer";
			reg = <0x40000c00 0x400>;
			interrupts = <50>;
			clocks = <&rcc CLK_TIM5>;
			status = "disabled";
		};

		usart2: uart@40004400 {
			compatible = "st,stm32f4-usart";
			reg = <0x40004400 0x400>;
			interrupts = <38>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		usart3: uart@40004800 {
			compatible = "st,stm32f4-usart";
			reg = <0x40004800 0x400>;
			interrupts = <39>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		uart4: uart@40004c00 {
			compatible = "st,stm32f4-usart";
			reg = <0x40004c00 0x400>;
			interrupts = <52>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		uart5: uart@40005000 {
			compatible = "st,stm32f4-usart";
			reg = <0x40005000 0x400>;
			interrupts = <53>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		uart7: uart@40007800 {
			compatible = "st,stm32f4-usart";
			reg = <0x40007800 0x400>;
			interrupts = <82>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		uart8: uart@40007c00 {
			compatible = "st,stm32f4-usart";
			reg = <0x40007c00 0x400>;
			interrupts = <83>;
			clocks = <&rcc CLK_APB1>;
			status = "disabled";
		};

		usart1: uart@40011000 {
			compatible = "st,stm32f4-usart";
			reg = <0x40011000 0x400>;
			interrupts = <37>;
			clocks = <&rcc CLK_APB2>;
			status = "disabled";
		};

		usart6: uart@40011400 {
			compatible = "st,stm32f4-usart";
			reg = <0x40011400 0x400>;
			interrupts = <71>;
			clocks = <&rcc CLK_APB2>;
			status = "disabled";
		};

		rcc: clk@40023800 {
			compatible = "st,stm32f429-rcc";
			reg = <0x40023800 0x400>;
			#clock-cells = <1>;
		};

		systick: timer@e000e010 {
			compatible = "arm,cortex-m3-systick";
			reg = <0xe000e010 0x10>;
			clocks = <&rcc CLK_AHB>;
		};
	};
};
