/*
 * Device tree for Infineon XMC4500
 */

#include "armv7-m.dtsi"

/ {
	soc {
		ccu40: ccu4@4000C000 {
			compatible = "infineon,xmc4500-ccu4";
			reg = <0x4000C000 0x4000>;
			interrupts = <44>, <45>, <46>, <47>;
			clocks = <&scu_ccu 2>;
			clock-names = "mclk";
			resets = <&scu_rcu 2>;
		};

		ccu41: ccu4@40010000 {
			compatible = "infineon,xmc4500-ccu4";
			reg = <0x40010000 0x4000>;
			interrupts = <48>, <49>, <50>, <51>;
			clocks = <&scu_ccu 2>;
			clock-names = "mclk";
			resets = <&scu_rcu 3>;
			status = "disabled";
		};

		ccu42: ccu4@40014000 {
			compatible = "infineon,xmc4500-ccu4";
			reg = <0x40014000 0x4000>;
			interrupts = <52>, <53>, <54>, <55>;
			clocks = <&scu_ccu 2>;
			clock-names = "mclk";
			resets = <&scu_rcu 4>;
			status = "disabled";
		};

		ccu80: ccu8@40020000 {
			compatible = "infineon,xmc4500-ccu8";
			reg = <0x40020000 0x4000>;
			interrupts = <60>, <61>, <62>, <63>;
			clocks = <&scu_ccu 2>;
			resets = <&scu_rcu 7>;
			status = "disabled";
		};

		ccu81: ccu8@40024000 {
			compatible = "infineon,xmc4500-ccu8";
			reg = <0x40024000 0x4000>;
			interrupts = <64>, <65>, <66>, <67>;
			clocks = <&scu_ccu 2>;
			resets = <&scu_rcu 8>;
			status = "disabled";
		};

		usic0_ch0: usic@40030000 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x40030000 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		usic0_ch1: usic@40030200 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x40030200 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		ccu43: ccu4@48004000 {
			compatible = "infineon,xmc4500-ccu4";
			reg = <0x48004000 0x4000>;
			interrupts = <56>, <57>, <58>, <59>;
			clocks = <&scu_ccu 2>;
			clock-names = "mclk";
			resets = <&scu_rcu 32>;
			status = "disabled";
		};

		sdmmc: sdhci@4801C000 {
			compatible = "infineon,xmc4500-sdmmc";
			reg = <0x4801C000 0x4000>;
			interrupts = <106>;
			clocks = <&scu_ccu 4>;
			clock-names = "clk_xin";
			resets = <&scu_rcu 38>;
			bus-width = <8>;
			status = "disabled";
		};

		usic1_ch0: usic@48020000 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x48020000 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		usic1_ch1: usic@48020200 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x48020200 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		usic2_ch0: usic@48024000 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x48024000 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		usic2_ch1: usic@48024200 {
			compatible = "infineon,xmc4500-usic";
			reg = <0x48024200 0x200>;
			clocks = <&scu_ccu 1>;
			status = "disabled";
		};

		ports: gpio@48028000 {
			compatible = "infineon,xmc4500-ports";
			reg = <0x48028000 0x1000>;
			gpio-controller;
			#gpio-cells = <2>;
		};

		scu_rcu: reset@50004400 {
			compatible = "infineon,xmc4500-scu-rcu";
			reg = <0x50004400 0x200>;
			#reset-cells = <1>;
		};

		scu_ccu: clk@50004600 {
			compatible = "infineon,xmc4500-scu-ccu";
			reg = <0x50004600 0x200>;
			#clock-cells = <1>;
		};

		rtc: rtc@50004A00 {
			compatible = "infineon,xmc4500-rtc";
			reg = <0x50004A00 0x300>;
		};
	};
};

&systick {
	status = "okay";
	clocks = <&scu_ccu 0>;
};
